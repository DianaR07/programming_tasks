using HorizonSideRobots

function beg!(robot)
    down!(robot)
    left!(robot)
    for side in (Nord, Ost, Sud, West)
        dvige!(robot, side)
    end
end

function down!(robot)
    n = 0
    while isborder(robot, Sud) == false
        move!(robot, Sud)
        n += 1
    end
    return n
end

function left!(robot)
    n = 0
    while isborder(robot, West) == false
        move!(robot, West)
        n += 1
    end
    return n
end

function dvige!(robot, side)
    while isborder(robot,side) == false
        move!(robot, side)
        putmarker!(robot)
    end
    
end
